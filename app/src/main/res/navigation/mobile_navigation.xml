<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_about_us"
        android:name="com.example.bright_skies.fragments.AboutUsFragment"
        android:label="@string/menu_about_us"
        tools:layout="@layout/fragment_about_us" />

    <fragment
        android:id="@+id/nav_calculator"
        android:name="com.example.bright_skies.fragments.CalculatorFragment"
        android:label="@string/menu_calculator"
        tools:layout="@layout/fragment_calculator" />

    <fragment
        android:id="@+id/nav_faq"
        android:name="com.example.bright_skies.fragments.FaqFragment"
        android:label="@string/menu_faq"
        tools:layout="@layout/fragment_faq" />

    <fragment
        android:id="@+id/nav_information"
        android:name="com.example.bright_skies.fragments.InformationFragment"
        android:label="@string/menu_information"
        tools:layout="@layout/information_expandable"/>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.bright_skies.fragments.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/nav_results"
        android:name="com.example.bright_skies.fragments.ResultsFragment"
        android:label="@string/menu_results"
        tools:layout="@layout/fragment_results" />

</navigation>